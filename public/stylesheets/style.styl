/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Quicksand')

/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables
 */
main-color = #fa5b4d
background-color = #0b1419
font-color = #a2a2a2
accent-color = #78bbd8

body
  background-color background-color
  font-family 'Georgia'
  
  color font-color

  /* 
   * header
   * font-family 'Quicksand'
   * padding 50px 10px
   * color #fff
   * font-size 25px
   * text-align center
   *
   * Note the use of the `main-color`
   * variable and the `darken` function
   *
   * background-color main-color
   * border-bottom 3px solid darken(main-color, 30%)
   * text-shadow 0px -1px 0px darken(main-color, 30%)*/

.container
  width 1024px
  height 700px
  margin 0px auto
  background-image url(../images/SSIsplash.png)
  background-repeat no-repeat

.bigspacer
  height 500px
  width 800px
  float left

.main-content
  float left
  width 1024px

  p
    margin 20px 170px 20px 80px
    font-family 'Trebuchet MS'
    font-size 18px

  .accent
    color accent-color

  h1
    font-family 'League Gothic'
    font-size 48px
    color white
    margin-bottom 20px

  h3
    font-family 'League Gothic'
    font-size 36px
    margin 13px 150px 10px 40px
    padding 0px 10px
    margin-bottom 10px
    color white
    opacity .7
    clear right

  .right 
    float right
    margin-bottom 30px


.main-contentelevated
  float left
  width 1024px
  margin-top -100px

  p
    margin 20px 170px 20px 80px
    font-family 'Trebuchet MS'
    font-size 18px

  .accent
    color accent-color

  h1
    font-family 'League Gothic'
    font-size 48px
    color white
    margin-bottom 20px

  h3
    font-family 'League Gothic'
    font-size 36px
    margin 13px 150px 10px 40px
    padding 0px 10px
    margin-bottom 10px
    color white
    opacity .7
    clear right

  .right 
    float right
    margin-bottom 30px


.sidebar
  float left
  width 200px
  padding 40px 0px
  a
    font-family 'League Gothic'
    font-size 36px
    margin 13px 10px 4px
    padding 0px 10px
    margin-bottom 10px
    color white
    text-decoration none
    float right
    opacity .5
  a.selected
    background-color accent-color
    opacity .9
  a:hover
    opacity 1
  
p
  line-height 1.8

footer
  width 500px
  margin 50px auto
  border-top 1px dotted #ccc
  padding-top 5px
  font-size 13px